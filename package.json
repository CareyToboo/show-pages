{
  "name": "show-pages",
  "version": "1.0.0",
  "description": "mobile show pages",
  "main": "index.html",
  "scripts": {
    "serve": "node ./bin/cli serve",
    "build": "node ./bin/cli build",
    "lint:staged": "lint-staged",
    "lint:style": "stylint ./src",
    "lint:js": "eslint ./{src,bin}/**/*.js",
    "format": "prettier --write './src/{js,plugins,utils}/**/*.{js,yaml}'"
  },
  "keywords": [
    "mobile",
    "fullpage"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "js-yaml": "^3.11.0",
    "parcel-bundler": "^1.7.1"
  },
  "devDependencies": {
    "autoprefixer": "^8.3.0",
    "babel-eslint": "^8.2.3",
    "babel-preset-env": "^1.6.1",
    "debug": "^3.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "postcss-assets": "^5.0.0",
    "postcss-modules": "^1.1.0",
    "postcss-pxtorem": "^4.0.1",
    "posthtml-px2rem": "^0.0.3",
    "prettier": "1.11.1",
    "stylint": "^1.5.9",
    "stylus": "^0.54.5"
  },
  "lint-staged": {
    "*.js": "npm run lint:js && npm run format",
    "*.styl": "npm run lint:style"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged"
    }
  }
}
