doctype html
html(lang='zh')
  head
    -
      var metas = [{
        name: 'viewport',
        content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0,user-scalable=no,minimal-ui'
      },{
        'http-equiv': 'Content-Type',
        content: 'text/html; charset=utf-8',
      },{
        name: 'format-detection',
        content: 'telephone=no',
      },{
        name: 'Expires',
        content: '-1',
      },{
        name: 'Pragma',
        content: 'no-cache',
      },{
        name: 'full-screen',
        content: 'yes',
      },{
        name: 'browsermode',
        content: 'application',
      },{
        name: 'x5-orientation',
        content: 'portrait',
      }];
    each item in metas
      meta&attributes(item)
    script(src='./js/set.js')
  body
    h1 nihao
    script(src='./js/index.js')
